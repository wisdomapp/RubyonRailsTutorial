<table class="form">
<%= form_tag(controller:"dengonban",action:"index")do %>
<tr>
  <tb>名前:</tb>
  <tb><%= text_field_tag("name") %></tb>
</tr>
<tr>
  <tb>メール</tb>
  <tb><%= text_field_tag("mail") %></tb>
</tr>
<tr>
  <tb>メッセージ</tb>
  <tb><%= text_area_tag("msg",'',size:"50x3") %></tb>
</tr>
<tr>
  <tb></tb>
  <tb><%= submit_tag("Click") %></tb>
</tr>
<% end %>
</table>

<table class="dengon">
<tr>
  <th style="width:50%">メッセージ</th>
  <th>名前</th>
  <th>メール</th>
  <th>投稿日時</th>
</tr>
<% @dengon_data.each do |key,obj| %>
<tr>
  <td class="msg"><%= obj['msg'] %></td>
  <td class="name"><%= obj['name'] %></td>
  <td class="mail"><%= obj['mail'] %></td>
  <td class="time"><%= Time.at(key.to_i) %></td>
</tr>
<% end %>
</table>
